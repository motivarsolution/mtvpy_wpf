<UserControl x:Class="mtvpt_wpf.View.SubUserControl.HomeUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:mtvpt_wpf.View.SubUserControl"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             xmlns:wpf="clr-namespace:MaterialDesignThemes.Wpf"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             Background="#1b2b3e"
             d:DesignHeight="450" 
             d:DesignWidth="800"
             d:DataContext="{d:DesignInstance local:HomeUserControl}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0"><!-- Shop Name -->
            <TextBlock Text="Shop Name"
                       FontSize="40"
                       Foreground="White"
                       HorizontalAlignment="Left"/>
            <StackPanel HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Orientation="Horizontal">
                <materialDesign:PackIcon
                    x:Name="HomeNotificationIcon"
                    Kind="BellRing" 
                    VerticalAlignment="center" 
                    Foreground="Gray" 
                    Height="40" 
                    Width="25"
                    Margin="0 0 0 0" 
                    MouseEnter="HomeNotificationIcon_MouseEnter" 
                    MouseLeave="HomeNotificationIcon_MouseLeave" 
                    MouseDown="HomeNotificationIcon_MouseDown" 
                    MouseUp="HomeNotificationIcon_MouseUp">
                    
                </materialDesign:PackIcon>
                <materialDesign:PackIcon
                    x:Name="HomeSettingIcon"                                                    Kind="Settings"                                 
                    VerticalAlignment="center" 
                    Foreground="Gray" 
                    Height="40"        
                    Width="25" 
                    Margin="0 0 0 0" 
                    MouseEnter="HomeSettingIcon_MouseEnter" 
                    MouseLeave="HomeSettingIcon_MouseLeave"
                    MouseDown="HomeSettingIcon_MouseDown" 
                    MouseUp="HomeSettingIcon_MouseUp" />
                <Border Width="50"
                        Height="50"
                        BorderThickness="2"
                        BorderBrush="Black">
                    <TextBlock Text="Image"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Border>

            </StackPanel>
        </Grid>
        <Grid Grid.Row="1"><!-- Search -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="6*"/>
                <ColumnDefinition Width="4*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Left">
                    <TextBox Width="300"
                             Height="25"/>
                    <ComboBox Width="150"
                              Height="25"
                              FontSize="14"
                              IsReadOnly="True"
                              Margin="10 0 0 0"
                              Text="Search by" 
                              IsEditable="True" 
                              Focusable="False">
                        <ComboBoxItem>
                            <TextBlock Text="Inventory"/>
                        </ComboBoxItem>
                        <ComboBoxItem>
                            <TextBlock Text="Sales"/>
                        </ComboBoxItem>
                    </ComboBox>
                </StackPanel>
            </Grid>
            <Grid Grid.Column="1">
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center">
                    <Border Width="50"
                            Height="50"
                            BorderBrush="White"
                            BorderThickness="2"
                            Margin="10 0 10 0">
                        
                    </Border>
                    <Border Width="50"
                            Height="50"
                            BorderBrush="White"
                            BorderThickness="2"
                            Margin="10 0 10 0">

                    </Border>
                    <Border Width="50"
                            Height="50"
                            BorderBrush="White"
                            BorderThickness="2"
                            Margin="10 0 10 0">

                    </Border>
                    <Border Width="50"
                            Height="50"
                            BorderBrush="White"
                            BorderThickness="2"
                            Margin="10 0 10 0">

                    </Border>
                </StackPanel>
            </Grid>
        </Grid>
        <Grid Grid.Row="2"><!-- Chart -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Stretch"
                        Visibility="Visible">
                <Grid>
                    <lvc:PieChart LegendLocation="Bottom" 
                                  Hoverable="False" 
                                  Width="400">
                        <lvc:PieChart.Series>
                            <lvc:PieSeries Title="Maria" Values="3" DataLabels="True"/>
                            <lvc:PieSeries Title="Charles" Values="4" DataLabels="True"/>
                            <lvc:PieSeries Title="Frida" Values="6" DataLabels="True" />
                            <lvc:PieSeries Title="Frederic" Values="2" DataLabels="True"/>
                        </lvc:PieChart.Series>
                    </lvc:PieChart>
                </Grid>
                <Grid>
                    <Grid Width="400">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                        </Grid.RowDefinitions>
                        <lvc:CartesianChart Grid.Row="1" LegendLocation="Bottom">
                            <lvc:CartesianChart.Series>
                                <lvc:ScatterSeries Title="Series A" Values="{Binding ValuesA}" />
                                <lvc:ScatterSeries Title="Series B" Values="{Binding ValuesB}"
                                   PointGeometry="{x:Static lvc:DefaultGeometries.Diamond}" />
                                <lvc:ScatterSeries Title="Series C" Values="{Binding ValuesC}"
                                   PointGeometry="{x:Static lvc:DefaultGeometries.Triangle}"
                                   StrokeThickness="2" Fill="Transparent"/>
                            </lvc:CartesianChart.Series>
                            <lvc:CartesianChart.AxisY>
                                <!--setting the axis unit improved the labels rounding rule-->
                                <lvc:Axis Unit="1"></lvc:Axis>
                            </lvc:CartesianChart.AxisY>
                        </lvc:CartesianChart>
                    </Grid>
                </Grid>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="3"><!-- Recently Menu-->
            <Border BorderBrush="White"
                    BorderThickness="1"
                    Margin="10">
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center">
                    <Border Width="70"
                            Height="70"
                            BorderBrush="White"
                            BorderThickness="2"
                            Margin="30 0 30 0">
                    </Border>
                    <Border Width="70"
                            Height="70"
                            BorderBrush="White"
                            BorderThickness="2"
                            Margin="30 0 30 0">
                    </Border>
                    <Border Width="70"
                            Height="70"
                            BorderBrush="White"
                            BorderThickness="2"
                            Margin="30 0 30 0">
                    </Border>
                    <Border Width="70"
                            Height="70"
                            BorderBrush="White"
                            BorderThickness="2"
                            Margin="30 0 30 0">
                    </Border>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
